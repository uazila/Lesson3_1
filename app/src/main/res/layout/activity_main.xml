<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="92dp"
        android:background="@drawable/back_et"
        android:drawableStart="@drawable/ic_email"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@id/messege" />

    <EditText
        android:id="@+id/theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="22dp"
        android:background="@drawable/back_et"
        android:drawableStart="@drawable/ic_theme"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toTopOf="@id/messege"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/messege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/back_et"
        android:drawableStart="@drawable/ic_message"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messege" />


</androidx.constraintlayout.widget.ConstraintLayout>